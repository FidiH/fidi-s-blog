---
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>list semua blog</title>
  </head>
  <body>
    <h1>list Blog</h1>
    <ul>
      {
        posts.map((post) => (
          <li>
            <img src={"/assets/" + post.data?.banner} width="200px" alt="" />
            <a href={`/${post.slug}`}>
              <h3>{post.data.title}</h3>
            </a>
            <p>{post.data.summary}</p> <br />
          </li>
        ))
      }
    </ul>
  </body>
</html>
