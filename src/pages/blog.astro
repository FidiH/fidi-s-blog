---
// import css tailwind
import "../styles/global.css"
// import component header
import Header from "../layouts/components/Header.astro"
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>list semua blog</title>
  </head>
  <body>
    <Header></Header>
    <main class="p-7">
    <h1 class="font-semibold text-2xl">list Blog</h1>
    <ul class="mt-10">
      {
        posts.map((post) => (
          <li class="my-3">
            <a href={`/${post.slug}`}>
              
              {post.data.banner ? (
                <img class="mb-4 rounded-xl aspect-[5/2] w-full object-cover" src={"/assets/" + post.data?.banner} width="200px" alt="" />
              ) : ""}
              
              <h3 class="font-semibold text-lg">{post.data.title}</h3>
              <p>{post.data.summary}</p> <br />
            </a>
          </li>
        ))
      }
    </ul>
    </main>
  </body>
</html>
